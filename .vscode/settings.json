{
	"explorer.fileNesting.patterns": {
		"package.json": "bun.lockb, bunfig.toml, .ncurc.json",
		"biome.json": ".editorconfig, .gitattributes"
	},
	"files.exclude": {
		".nx": true
	},
	"files.readonlyInclude": {
		// prevent accidental edits outside workspace
		"apps/**": true,
		"libs/**": true
	},
	"json.schemas": [
		{
			"fileMatch": [".ncurc.json"],
			"url": "https://raw.githubusercontent.com/raineorshine/npm-check-updates/main/src/types/RunOptions.json"
		}
	]
}
