{
	"$schema": "node_modules/nx/schemas/nx-schema.json",
	"targetDefaults": {
		"check": {
			"executor": "nx:run-commands",
			"options": {
				"command": "biome check --apply src",
				"cwd": "{projectRoot}"
			}
		},
		"publish": {
			"executor": "nx:run-commands",
			"options": {
				"command": "bunx jsr publish --allow-dirty",
				"cwd": "{projectRoot}"
			}
		}
	}
}
